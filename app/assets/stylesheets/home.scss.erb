// home
.hcs-h1{
    text-align:center;
    font-size:16px;
    margin:0;
    padding:15px 0;
    background-color:#f0f0f0;
    color:#b7b7b7;
}
.swiper-button-prev.iconfont, .swiper-container-rtl .swiper-button-next.iconfont{
    background:none;
    font-size:30px;
    color:#fff;
}
.swiper-button-next, .swiper-container-rtl .swiper-button-prev{
    background:none;
    font-size:30px;
    color:#fff;
}
.swiper-pagination-bullet{
    width: 30px;
    height: 4px;
    display: inline-block;
    border-radius: 0;
    background: #fff;
    opacity: .5;
}
.swiper-container-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet{
    margin: 0 2px;
}
.swiper-pagination-bullet-active{
    background-color:#fff;
    opacity: 1;
}

// about
.about{
    padding: 20px 0;
}
.about .container{
    padding: 0 15px;
}
.pro-title{margin: 20px 0;background:linear-gradient(to left,#fff,#00d1c8,#fff);height:1px;line-height: 1px;font-size: 24px;text-transform: uppercase;color: #00d1c8;font-weight: bold;text-align: center;}
.pro-title span{background-color: #fff;padding: 0 20px;}
.about-title{
    font-size: 18px;
    color: #00d1c8;
    text-transform: uppercase;
    font-weight: bold;
    margin-bottom: 20px;
}
.item-num{
    display: inline-block;
    width: 40px;
    height: 40px;
    font-size: 21px;
    font-weight: bold;
    background-image: url(<%= asset_path('loading.png') %>);
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: 100%;
    vertical-align: middle;
    line-height: 40px;
    text-align: center;
    margin-right: 10px;
}

.about{
    line-height: 1.8;
}

